{
  "name": "abc-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend for ABC Dashboard application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:staging": "cross-env NODE_ENV=staging nodemon server.js",
    "dev:prod": "cross-env NODE_ENV=production nodemon server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "migrate": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js",
    "migrate:fresh": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js fresh",
    "migrate:staging": "cross-env NODE_ENV=staging node src/infrastructure/scripts/migrate.js",
    "migrate:prod": "cross-env NODE_ENV=production node src/infrastructure/scripts/migrate.js",
    "rollback": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js rollback",
    "rollback:staging": "cross-env NODE_ENV=staging node src/infrastructure/scripts/migrate.js rollback",
    "rollback:prod": "cross-env NODE_ENV=production node src/infrastructure/scripts/migrate.js rollback",
    "seed": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js seed",
    "seed:fresh": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js fresh-seed",
    "seed:staging": "cross-env NODE_ENV=staging node src/infrastructure/scripts/migrate.js seed",
    "seed:prod": "cross-env NODE_ENV=production node src/infrastructure/scripts/migrate.js seed",
    "db:status": "cross-env NODE_ENV=development node src/infrastructure/scripts/migrate.js status",
    "db:status:staging": "cross-env NODE_ENV=staging node src/infrastructure/scripts/migrate.js status",
    "db:status:prod": "cross-env NODE_ENV=production node src/infrastructure/scripts/migrate.js status",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "test:email:suite": "node tests/email-suite.test.js",
    "test:email:config": "node tests/email-suite.test.js config",
    "test:email:send": "node tests/email-suite.test.js send",
    "test:email:templates": "node tests/email-suite.test.js templates",
    "test:email:health": "node tests/email-suite.test.js health",
    "sync:test-connectivity": "node -e \"import('./src/infrastructure/config/env.js').then(() => import('./src/infrastructure/scripts/sync-test-connectivity.js')).then(({testConnectivity}) => testConnectivity()).catch(e => { console.error(e); process.exit(1); })\"",
    "sync:start": "node -e \"import('./src/infrastructure/config/env.js').then(() => import('./src/infrastructure/scripts/sync-runner.js')).then(({runSync}) => runSync()).catch(console.error)\"",
    "sync:limit": "cross-env SYNC_LIMIT=20 node -e \"import('./src/infrastructure/config/env.js').then(() => import('./src/infrastructure/scripts/sync-runner.js')).then(({runSync}) => runSync()).catch(console.error)\"",
    "sync:pages": "cross-env SYNC_MAX_PAGES=10 node -e \"import('./src/infrastructure/config/env.js').then(() => import('./src/infrastructure/scripts/sync-runner.js')).then(({runSync}) => runSync()).catch(console.error)\"",
    "sync:status": "node -e \"import('./src/infrastructure/config/env.js').then(() => import('./src/infrastructure/scripts/sync-status.js')).then(({checkSyncStatus}) => checkSyncStatus()).catch(console.error)\"",
    "encrypt-db-password": "node scripts/encrypt-db-password.js",
    "verify:sms-balance": "cross-env NODE_ENV=development node scripts/verify-sms-balance.js",
    "db:create": "createdb abc_dashboard_dev || echo 'Database might already exist'",
    "db:drop": "dropdb abc_dashboard_dev || echo 'Database might not exist'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "export:swagger": "node scripts/export-swagger.js"
  },
  "dependencies": {
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "cross-spawn": "^7.0.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.3.1",
    "glob": "^13.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "abc-dashboard",
    "dashboard",
    "authentication",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC"
}
