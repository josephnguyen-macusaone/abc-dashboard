# ABC Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/abc_dashboard

# ============================================
# JWT CONFIGURATION
# ============================================

# JWT Secret Key (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Token Expiration Times
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=abc-dashboard

# Email Verification Token Expiration
JWT_EMAIL_VERIFICATION_EXPIRES_IN=24h
JWT_PASSWORD_RESET_EXPIRES_IN=10m

# ============================================
# CLIENT CONFIGURATION
# ============================================

# Frontend Application URL
CLIENT_URL=http://localhost:3000

# ============================================
# ENCRYPTION CONFIGURATION
# ============================================

# Bcrypt Rounds (higher = more secure but slower)
BCRYPT_ROUNDS=14

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email Service Selection
# Options: mailhog (dev), google-workspace (prod)
EMAIL_SERVICE=mailhog

# Email Sender Information
EMAIL_FROM=noreply@localhost
EMAIL_FROM_NAME=ABC Dashboard (Dev)

# SMTP Configuration (for Google Workspace)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false

# Google Workspace Authentication (leave empty for MailHog)
EMAIL_USER=
EMAIL_PASS=

# SendGrid Configuration (if using SendGrid instead)
# SENDGRID_API_KEY=

# ============================================
# EXTERNAL LICENSE SYNC
# ============================================
# Required to sync licenses from the external license management API
# (used by npm run sync:start, sync:status, sync:test-connectivity and the in-app scheduler)
EXTERNAL_LICENSE_API_URL=
EXTERNAL_LICENSE_API_KEY=

# Optional: timeouts and tuning (defaults in license-sync-config.js)
# EXTERNAL_LICENSE_API_TIMEOUT_MS=30000
# LICENSE_SYNC_BATCH_SIZE=50

# ============================================
# CACHE CONFIGURATION
# ============================================

# Redis (optional; set CACHE_TYPE=memory to use in-memory only)
REDIS_URL=redis://localhost:6379
CACHE_TYPE=redis

# Cache TTL in seconds
CACHE_USER_DATA_TTL=1800
CACHE_API_RESPONSE_TTL=300

# ============================================
# DEVELOPMENT SETUP INSTRUCTIONS
# ============================================

# 1. Copy this file to .env
# 2. Fill in the required values (especially JWT_SECRET and MONGODB_URI)
# 3. For production, change EMAIL_SERVICE to 'google-workspace' and configure EMAIL_USER/EMAIL_PASS
# 4. Run 'npm run test:email-config' to validate email configuration
# 5. Run 'npm run test:email:suite' for comprehensive email testing

# ============================================
# PRODUCTION NOTES
# ============================================

# For production deployment:
# - Use strong, unique JWT_SECRET
# - Set NODE_ENV=production
# - Configure production MongoDB URI
# - Set up Google Workspace or SendGrid for email
# - Update CLIENT_URL to your production domain
# - Consider using environment-specific secrets management
