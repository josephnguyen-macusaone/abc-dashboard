# =================================================================
# ABC DASHBOARD - ENVIRONMENT CONFIGURATION TEMPLATE
# =================================================================
# Copy this file and customize for your environment:
# cp env.template .env                    # Development (.env)
# cp env.template env/development.env     # Development
# cp env.template env/staging.env         # Staging
# cp env.template env/production.env      # Production
# =================================================================

# =================================================================
# ESSENTIAL SETTINGS (Required for basic operation)
# =================================================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Type: 'mongodb' or 'postgresql'
DATABASE_TYPE=mongodb

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# MongoDB (used when DATABASE_TYPE=mongodb)
MONGODB_URI=mongodb://localhost:27017/abc_dashboard

# PostgreSQL (used when DATABASE_TYPE=postgresql)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=abc_dashboard
POSTGRESQL_USERNAME=admin
POSTGRESQL_PASSWORD=password
# Optional: Full URI (overrides above if set)
# POSTGRESQL_URI=postgresql://admin:password@localhost:5432/abc_dashboard

# =================================================================
# SECURITY & AUTHENTICATION
# =================================================================
JWT_EXPIRES_IN=7d

# Password Reset & Email Verification
EMAIL_VERIFICATION_EXPIRES=24h
PASSWORD_RESET_EXPIRES=1h

# =================================================================
# EMAIL CONFIGURATION
# =================================================================

# Development (MailHog - RECOMMENDED for local development)
EMAIL_SERVICE=mailhog
EMAIL_HOST=localhost
EMAIL_PORT=1025

# Production (Gmail example - UNCOMMENT and configure for production)
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Email sender information
EMAIL_FROM=noreply@localhost
EMAIL_FROM_NAME=ABC Dashboard

# =================================================================
# FILE UPLOAD CONFIGURATION (Optional)
# =================================================================
UPLOAD_STORAGE=local
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# =================================================================
# PERFORMANCE & CACHING (Optional)
# =================================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL in seconds (3600 = 1 hour)
REDIS_CACHE_TTL=3600

# =================================================================
# MONITORING & LOGGING
# =================================================================
LOG_LEVEL=debug

# API Monitoring (resets every 5 minutes)
API_MONITOR_RESET_INTERVAL=300000

# =================================================================
# FEATURE FLAGS (Optional)
# =================================================================
# Enable/disable specific features
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_FILE_UPLOADS=true
FEATURE_API_MONITORING=true

# =================================================================
# DEVELOPMENT SETTINGS (Ignore in production)
# =================================================================
# These settings are only relevant during development
DEV_CORS_ENABLED=true
DEV_REQUEST_LOGGING=true
